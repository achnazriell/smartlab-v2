    @startuml
    skinparam {
    backgroundColor White
    arrowColor #2C3E50
    processBackgroundColor #D5F4E6
    processBorderColor #2C3E50
    databaseBackgroundColor #FDEBD0
    databaseBorderColor #E67E22
    storageBackgroundColor #E8DAEF
    storageBorderColor #8E44AD
    }

    title DFD Level 1 - SmartLab LMS

    database "users\nstudents\nteachers" as DB1
    database "classes\nsubjects" as DB2
    database "materis\ntasks\ncollections" as DB3
    database "exams\nquestions\nattempts" as DB4
    file "File Storage\n(materi, tugas)" as FS

    :Admin: as admin
    :Guru: as guru
    :Murid: as murid

    rectangle "1.0\nManajemen\nPengguna" as P1
    rectangle "2.0\nManajemen\nKonten" as P2
    rectangle "3.0\nSistem\nPenugasan" as P3
    rectangle "4.0\nSistem\nUjian" as P4
    rectangle "5.0\nForum &\nDiskusi" as P5
    rectangle "6.0\nLaporan &\nAnalisis" as P6

    ' Admin flows
    admin --> P1 : data guru/murid
    P1 --> DB1 : simpan data
    DB1 --> P6 : data pengguna

    ' Guru flows
    guru --> P2 : upload materi
    P2 --> DB3 : simpan metadata
    P2 --> FS : simpan file
    guru --> P3 : buat tugas
    P3 --> DB3 : simpan tugas
    guru --> P4 : buat ujian
    P4 --> DB4 : simpan ujian

    ' Murid flows
    murid --> P3 : kumpulkan tugas
    P3 --> DB3 : simpan koleksi
    murid --> P4 : ikuti ujian
    P4 --> DB4 : simpan attempt
    murid --> P5 : posting diskusi
    P5 --> DB4 : simpan komentar

    ' Inter-process flows
    DB1 --> P2 : data pengguna
    DB2 --> P3 : data kelas/mapel
    DB3 --> P6 : data tugas/koleksi
    DB4 --> P6 : data ujian/nilai
    FS --> P6 : metadata file

    ' Output flows
    P6 --> admin : laporan sistem
    P6 --> guru : analisis kelas
    P6 --> murid : progress belajar

    @enduml
